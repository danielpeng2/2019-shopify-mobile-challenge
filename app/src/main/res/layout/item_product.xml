<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_product_name"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/black" tools:text="Haha"
            app:layout_constraintStart_toEndOf="@+id/image_collection" android:layout_marginStart="24dp"
            android:textSize="16sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_inventory"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="24 in stock"
            app:layout_constraintTop_toBottomOf="@+id/text_collection_name"
            app:layout_constraintStart_toEndOf="@+id/image_collection" android:layout_marginStart="24dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/image_collection"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_collection_name"
            tools:text="TextView"
            app:layout_constraintTop_toBottomOf="@+id/text_product_name"
            app:layout_constraintStart_toEndOf="@+id/image_collection" android:layout_marginStart="24dp"
    />
</android.support.constraint.ConstraintLayout>